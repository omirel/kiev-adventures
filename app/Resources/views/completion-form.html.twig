{% extends "master.html.twig" %}

{% block content %}
    <!-- Completion -->
    <section class="g-bg-gray-light-v5">
        <div class="container g-py-100">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-9 col-lg-6">
                    <div class="u-shadow-v21 g-bg-white rounded g-py-40 g-px-30">
                    {% if app.request.get('send') == 'true' %}
                        <div class="alert alert-success" role="alert">
                            Registration completed.
                        </div>
                    {% else %}
                        <header class="text-center mb-4">
                            <h2 class="h2 g-color-black g-font-weight-600">Registration</h2>
                        </header>

                        <!-- Form -->
                        {{ form_start(form, { 'attr': {'class': 'g-py-15'}}) }}
                            {{ form_errors(form) }}
                            <div class="mb-4">
                                {{ form_row(form.username, { 'attr': {'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15'} }) }}
                            </div>

                            <div class="mb-4">
                                {{ form_row(form.email, { 'attr': {'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15'} }) }}
                            </div>

                            <div class="mb-4">
                                {{ form_row(form.contact, { 'attr': {'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15'} }) }}
                            </div>

                            <div class="mb-4" >
                                {{ form_row(form.submit, { 'attr': {'class': 'btn btn-md u-btn-primary rounded g-py-13 g-px-25'} }) }}
                            </div>
                        {{ form_end(form) }}
                        <!-- End Form -->

                        <footer class="text-center">
                            <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">Already have an account? <a class="g-font-weight-600" href="{{ path('sulu_community.login') }}">signin</a></p>
                        </footer>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Completion -->

{% endblock %}