    <section class="dzsparallaxer auto-init height-is-based-on-content use-loading" data-options='{direction: "reverse", settings_mode_oneelement_max_offset: "150"}'>
        <!-- Parallax Image -->
        <div class="divimage dzsparallaxer--target w-100 g-bg-cover g-bg-white-gradient-opacity-v3--after" style="height: 140%; background-image: url(../../assets/img-temp/1920x800/img10.jpg);"></div>
        <!-- End Parallax Image -->

        <div class="container text-center g-py-100--md g-py-80">
            <h2 class="h1 text-uppercase g-font-weight-300 g-mb-30">Showing {{ hits|length }} results for "{{ query }}"</h2>

            <!-- Search Form -->
            <form class="g-width-60x--md mx-auto" action="{{ path('sulu_search.website_search') }}" method="GET">
                <div class="form-group g-mb-20">
                    <div class="input-group u-shadow-v21 rounded g-mb-15">
                        <input name="q" class="form-control form-control-md g-brd-white g-font-size-16 border-right-0 pr-0 g-py-15" type="text" placeholder="{{ query }}">
                        <div class="input-group-addon d-flex align-items-center g-bg-white g-brd-white g-color-gray-light-v1 g-pa-2">
                            <button class="btn u-btn-primary g-font-size-16 g-py-15 g-px-20" type="submit">
                                <i class="icon-magnifier g-pos-rel g-top-1"></i>
                            </button>
                        </div>
                    </div>
                    <small class="form-text g-opacity-0_8 g-font-size-default">Search any words, questions and so on here.</small>
                </div>
            </form>
            <!-- End Search Form -->
        </div>
    </section>
